@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Privacy Policy";
    var currentCulture = Context.Request.Cookies["UserCulture"] ?? "en";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Privacy Policy - Visit Gyumri</title>
    <link rel="stylesheet" href="~/Content/css/pages.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <main class="main-content">
        <!-- Header -->
        <section class="privacy-header">
            <div class="container">
                <h1>@AppRes.PrivacyPolicy</h1>
                <p>@AppRes.PrivacyMatters</p>
            </div>
        </section>

        <!-- Main Content -->
        <section class="container content-section">
            <div class="content-wrapper privacy-content">
                <p class="lead-text">
                    @AppRes.PrivacyDesc1
                </p>

                <h2>@AppRes.PrivacyCollect</h2>
                <p>@AppRes.PrivacyCollectDesc</p>
                <ul>
                    <li>
                       @AppRes.Event_related <strong>@AppRes.PrivacySubmitEvent</strong> @AppRes.PrivacyForm
                    </li>
                    <li>
                        @AppRes.PrivacyAnonymous
                    </li>
                </ul>

                <h2>@AppRes.PrivacyWhy</h2>
                <p>@AppRes.PrivacyWhyTo</p>
                <ul>
                    <li>@AppRes.PWhy1</li>
                    <li>@AppRes.PWhy2</li>
                    <li>@AppRes.PWhy3</li>
                    <li>@AppRes.PWhy4</li>
                </ul>

                <h2>@AppRes.PrivacyHow</h2>
                <p>
                    @AppRes.PrivacyHowDesc
                </p>
                <p class="bold-text">@AppRes.PrivacySell</p>

                <h2>@AppRes.PrivacyTools</h2>
                <p>
                   @AppRes.PrivacyToolsDesc
                </p>

                <h2>@AppRes.PrivacyChoose</h2>
                <p>@AppRes.PrivacyCan</p>
                <ul>
                    <li>@AppRes.PrivacyData</li>
                    <li>
                       @AppRes.PRequest
                        <a href="mailto:info@visitgyumri.info">info@visitgyumri.info</a>
                    </li>
                </ul>

                <h2>@AppRes.PUpdates</h2>
                <p>
                  @AppRes.PUpdatesDesc
                </p>

                <div class="info-box">
                    <p>
                      @AppRes.PQuestion
                        <a href="mailto:info@visitgyumri.info">info@visitgyumri.info</a>
                    </p>
                </div>
            </div>
        </section>
    </main>
</body>
</html>