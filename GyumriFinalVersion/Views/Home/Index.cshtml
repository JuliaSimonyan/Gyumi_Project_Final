@{
    var currentCulture = Context.Request.Cookies["UserCulture"] ?? "en";
    var places = ViewBag.Places as List<Gyumri.Common.ViewModel.Place.PlacesViewModel>;
}

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Gyumri</title>
    <link rel="stylesheet" href="~/Content/css/responsive.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css">

    <style>
        main{
            background-color: black !important;
        }
    </style>
<body>
    <section class="hero-section">
        <div class="hero-overlay"></div>
        <div class="hero-content ">
            <h1 class="display-1 fw-bold">@AppRes.WelcomeGyumri</h1>
            <p class="lead">
                @Html.Raw(AppRes.WelcomeDescription)
            </p>
            <a asp-controller="Trip" asp-action="Index" class="btn btn-plan fw-normal">@AppRes.PlanATrip</a>
        </div>
        <div class="hero-design">
            <img src="/Content/Images/gif1.gif">
        </div>
    </section>
    <div class="container-fluid py-5">
        <!-- Section 1 -->
        <div class="mb-1 ms-5">
            <h2 class="section-title1">@AppRes.Welcome</h2>
            <p class="section-subtitle1">@AppRes.WelcomeSubHeadline</p>
            <div class="scroll-container" id="scrollContainer1">
                <a href="@Url.Action("MainArticle")">
                    <div class="card">
                        <img src="~/Content/Images/reason1.jpeg" alt="Forge of Legends">
                        <img class="FrameImages" src="~/Content/Images/Frame (4).png" alt="Forge of Legends">

                        <div class="card-overlay">
                            <h5 class="card-title">Forge of Legends</h5>
                            <p class="card-text">UNESCO Blacksmithing Masterpieces</p>

                        </div>
                    </div>
                </a>
                <a href="@Url.Action("MainArticle")">

                <div class="card">
                    <img src="/Content/Images/reason4.jpeg" alt="Architectural Time Travel">
                        <img class="FrameImages" src="~/Content/Images/Frame (5).png" alt="Forge of Legends">

                    <div class="card-overlay">
                        <h5 class="card-title">@AppRes.ArchitecturalTimeTravel</h5>
                        <p class="card-text">@AppRes.FromEmpirestoEarthquakes</p>
                    </div>

                </div>
                </a>
                <a href="@Url.Action("MainArticle")">

                <div class="card">
                    <img src="/Content/Images/reason2.jpeg" alt="Cultural Renaissance">
                        <img class="FrameImages" src="~/Content/Images/Frame (6).png" alt="Forge of Legends">

                    <div class="card-overlay">
                        <h5 class="card-title">@AppRes.CulturalRenaissance</h5>
                        <p class="card-text">@AppRes.ArtTechTraditionCollide</p>
                    </div>

                </div>
                </a>
                <a href="@Url.Action("MainArticle")">

                <div class="card">
                    <img src="/Content/Images/reason3.jpeg" alt="Gyumri's Heritage">
                        <img class="FrameImages" src="~/Content/Images/Frame (4).png" alt="Forge of Legends">

                    <div class="card-overlay">
                        <h5 class="card-title">@AppRes.GyumriHeritage</h5>
                        <p class="card-text">@AppRes.DiscovertheHeartofArmenia</p>
                    </div>
                </div>
                </a>
                <a href="@Url.Action("MainArticle")">

                <div class="card">
                    <img src="/Content/Images/reason5.jpeg" alt="Gyumri's Culture">
                        <img class="FrameImages" src="~/Content/Images/Frame (5).png" alt="Forge of Legends">

                    <div class="card-overlay">
                        <h5 class="card-title">@AppRes.GyumrisCulture</h5>
                        <p class="card-text">@AppRes.TraditionMeetsModernity</p>
                    </div>
                </div>
                </a>
            </div>
        </div>

        <!-- Section 2 -->
        <div class="mb-1 ms-5">
            <h2 class="section-title1">@AppRes.MostPopular</h2>
            <div class="scroll-container" id="scrollContainer1">
                <div class="card newCard">
                    <img src="/Content/Images/Sev Berd.png" alt="Forge of Legends">
                    <div class="card-overlay">
                        <h5 class="card-title">@AppRes.SevBerd</h5>
                        <p class="card-text">@AppRes.SevBerdDesc</p>
                    </div>

                </div>
                <div class="card newCard">
                    <img src="/Content/Images/ferris wheel.png" alt="Architectural Time Travel">
                    <div class="card-overlay">
                        <h5 class="card-title">@AppRes.CentralPark</h5>
                        <p class="card-text">@AppRes.CentralParkDesc</p>
                    </div>

                </div>
                <div class="card newCard">
                    <img src="/Content/Images/Dzitoghtsonc.png" alt="Cultural Renaissance">
                    <div class="card-overlay">
                        <h5 class="card-title">@AppRes.DzitoghtsyanMuseum</h5>
                        <p class="card-text">@AppRes.DzitoghtsyanMuseumDesc</p>
                    </div>

                </div>
                <div class="card newCard">
                    <img src="/Content/Images/see1.png" alt="Gyumri's Heritage">
                    <div class="card-overlay">
                        <h5 class="card-title">@AppRes.Aslamazyan</h5>
                        <p class="card-text">@AppRes.AslamazyanDesc</p>
                    </div>
                </div>
                <div class="card newCard">
                    <img src="/Content/Images/Varem MArem.png" alt="Gyumri's Culture">
                    <div class="card-overlay">
                        <h5 class="card-title">@AppRes.VaremMarem</h5>
                        <p class="card-text">@AppRes.VaremMaremDesc</p>
                    </div>
                </div>
            </div>
        </div>

    <div class="container-fluid px-0">
        <!-- Discover Section -->
        <div class="discover-section d-flex align-items-center">
            <div class="container">
                <div class="discover-overlay">
                        <p class="text-uppercase text-muted mb-1">@AppRes.Discover</p>
                        <h2 class="discover-title">@AppRes.GyumrisUniqueDistricts</h2>
                        <p>@AppRes.JourneyThroughHistoryCultureCreativit</p>
                        <a href=@Url.Action("Index", "Map") class="btn btn-dark">@AppRes.LearnaboutGyumrisdistricts</a>
                </div>
                <div class="decorative-art"></div>
            </div>
        </div>
    </div>
    
    <div style="background-color: rgb(255, 255, 255); overflow: hidden;">

      

        <div class="coupon-section d-flex align-items-center">
            <div class="container">
                <div class="coupon-overlay">
                        <p class="section-title"> @AppRes.TakeYour <strong style="font-weight:800">@AppRes.CuponUpperCase</strong> @AppRes.AndExplore <strong style="font-weight:800">@AppRes.GyumriUpperCase</strong></p>
                        <p>@AppRes.CuponFeature <strong style="font-weight:500">@AppRes.greatDeals</strong></p>
                </div>
            </div>
        </div>

            <div class="container-fluid py-5 ms-5">
                <div>
                    <p class="section-title"><b class="fw-bold">@AppRes.LookingForMore </b>@AppRes.DiveDeeperIntoGyumrisHiddenGems</p>
                    <p class="section-subtitle">@AppRes.LookingForPartTextt</p>
                <div class="scroll-container" id="scrollContainer1">
                        @if (ViewBag.Places != null)
                        {
                            @foreach (var item in ViewBag.Places)
                            {
                                <a asp-controller="Home" asp-action="Articles" asp-route-articleId="@item.ArticleId">
                                    <div class="card">
                                        <img src="~/Images/places/@item.Photo" class="card-img-top" alt="Gyumri Drama Theatre">

                                        <div class="card-overlay">
                                            <div>
                                                <h2 class="card-title">@item.PlaceName</h2>
                                                <p class="card-text">@item.Description</p>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            }

                        }
                        else
                        {

                            <p>No places available.</p>
                        }

                </div>
                </div>
            </div>

        <div class="container-fluid py-5 ms-5">
            <div>
                    <p class="section-title"><b class="fw-bold">@AppRes.LookingForMore </b>@AppRes.DiveDeeperIntoGyumrisHiddenGems</p>
                    <p class="section-subtitle">@AppRes.LookingForPartTextt</p>
                <div class="scroll-container" id="scrollContainer1">
                    <div class="card">
                        <img src="/Content/Images/more1.jpeg" alt="Forge of Legends">
                        <div class="card-overlay">
                                <h5 class="card-title">@AppRes.ExploretheUndergroundArtsScene</h5>
                                <p class="card-text">@AppRes.ExploretheUndergroundArtsSceneText</p>
                        </div>
                    </div>
                    <div class="card">
                        <img src="/Content/Images/more2.jpeg" alt="Architectural Time Travel">
                        <div class="card-overlay">
                                <h5 class="card-title">@AppRes.TakeWorkshopWithLocalArtisans</h5>
                                <p class="card-text">@AppRes.TakeWorkshopWithLocalArtisansText</p>
                        </div>
                    </div>
                    <div class="card">
                        <img src="/Content/Images/place3.jpeg" alt="Cultural Renaissance">
                        <div class="card-overlay">
                                <h5 class="card-title">@AppRes.ExperienceGyumriAfterDark</h5>
                                <p class="card-text">@AppRes.ExperienceGyumriAfterDarkText</p>
                        </div>
                    </div>
                    <div class="card">
                        <img src="/Content/Images/more3.jpeg" alt="Gyumri's Heritage">
                        <div class="card-overlay">
                                <h5 class="card-title">@AppRes.GyumriHeritage</h5>
                                <p class="card-text">@AppRes.DiscovertheHeartofArmenia</p>
                        </div>
                    </div>
                    <div class="card">
                        <img src="/Content/Images/more4.jpeg" alt="Gyumri's Culture">
                        <div class="card-overlay">
                                <h5 class="card-title">@AppRes.GyumrisCulture</h5>
                                <p class="card-text">@AppRes.TraditionMeetsModernity</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid px-0" style="background-color: rgb(255, 255, 255);overflow: hidden;">
        <div class="discover-section-new d-flex align-items-center">
            <div class="container">
                <div class="discover-overlay discover-overlay-new">
                    <img style="position:absolute; left:500px; bottom:180px;" src="~/Content/Images/stars-png-641 1.png">
                        <p class="text-uppercase text-muted mb-1">@AppRes.StaroftheMonth</p>
                        <h2 class="discover-title">@AppRes.AregakBakery</h2>
                        <p>@AppRes.BakedwithLove</p>
                </div>
            </div>
        </div>
          
        </div>


    <script src="~/content/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/e8c2e1c09c.js" crossorigin="anonymous"></script>


</body>
</html>
