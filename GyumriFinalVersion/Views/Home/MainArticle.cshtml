@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = @AppRes.Welcome;
    var currentCulture = Context.Request.Cookies["UserCulture"] ?? "en";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var bgImage = ViewBag.Image as string;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/css/article.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <main class="article-container">
        <!-- Article Header -->
        <header class="article-header" style="background-image: url(@bgImage)">
            <div class="container">
                <h1>@AppRes.Welcome</h1>
            </div>
        </header>

        <!-- Article Content -->
        <div class="container">
            <article class="article-content">
                <div class="article-intro">
                    <p>
                    </p>
                </div>

                <section class="article-section">
                    <div class="section-content">
                        <h2>1. @AppRes.Point1</h2>
                        <p>
                            @AppRes.PointDesc1
                        </p>
                        <p>
                            @AppRes.PointDesc2

                        </p>
                        <p>
                            @AppRes.PointDesc3

                        </p>
                    </div>
                    <div class="section-image">
                        <img src="~/Content/Images/Architectural Time Travel.webp" alt="Historic architecture in Gyumri showing black tuff stone buildings">
                    </div>
                </section>

                <section class="article-section reverse">
                    <div class="section-content">
                        <h2>2. @AppRes.Point2 </h2>
                        <p>
                            @AppRes.Point2Desc1
                        </p>
                        <p>
                            @AppRes.Point2Desc2

                        </p>
                        <p>
                            @AppRes.Point2Desc3

                        </p>
                    </div>
                    <div class="section-image">
                        <img src="~/Content/Images/Creative Renaissance.webp" alt="Artists and creatives working in Gyumri">
                    </div>
                </section>

                <section class="article-section">
                    <div class="section-content">
                        <h2>3. @AppRes.Point3 </h2>
                        <p>
                            @AppRes.Point3Desc1
                        </p>
                        <p>
                            @AppRes.Point3Desc2
                        </p>
                        <p>
                            @AppRes.Point3Desc3
                        </p>
                    </div>
                    <div class="section-image">
                        <img src="~/Content/Images/Walking Supremacy.webp" alt="Walkable streets of Gyumri with pedestrians">
                    </div>
                </section>

                <section class="article-section reverse">
                    <div class="section-content">
                        <h2>4. @AppRes.Point4 </h2>
                        <p>
                            @AppRes.Point4Desc1
                        </p>
                        <p>
                            @AppRes.Point4Desc2

                        </p>
                        <p>
                            @AppRes.Point4Desc3

                        </p>
                    </div>
                    <div class="section-image">
                        <img src="~/Content/Images/See&Do Hero Banner.webp" alt="Affordable experiences in Gyumri">
                    </div>
                </section>

                <section class="article-section">
                    <div class="section-content">
                        <h2>5. @AppRes.Point5</h2>
                        <p>
                            @AppRes.Point5Desc1
                        </p>
                        <p>
                            @AppRes.Point5Desc2

                        </p>
                        <p>
                            @AppRes.Point5Desc3

                        </p>
                        <p>
                            @AppRes.Point5Desc4
                        </p>
                    </div>
                    <div class="section-image">
                        <img src="~/Content/Images/Culinary Love Letter.webp" alt="Traditional Armenian cuisine in Gyumri">
                    </div>
                </section>

                <div class="article-conclusion">
                    <h3>@AppRes.WhySection</h3>
                    <p>
                        @AppRes.WhyReason
                    </p>
                    <p class="conclusion-tagline">
                        <em>@AppRes.WhyReady</em>
                    </p>
                </div>
            </article>

        </div>
    </main>
</body>
</html>