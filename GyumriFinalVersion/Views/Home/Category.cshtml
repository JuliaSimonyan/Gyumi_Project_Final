<section class="see-do-section">
    <!-- Header Image with Title -->
    <div class="header-image">
        <h1 class=" header-title">@ViewBag.Category.Name</h1>
        <div><img class="" src="~/content/Images/Vector (1).png" alt="Symbols"></div>
    </div>

    <!-- Navigation Links -->
    <div class="nav-links">
        <a href="#">In Focus</a>
        <a href="#">Activities</a>
        <a href="#">Tourist Attractions</a>
        <a href="#">Excursion</a>
        <a href="#">Shopping</a>
    </div>

    <!-- Summer in Gyumri Section -->

</section>
<div class="container py-5 mainsection">
    <!-- Summer in Gyumri Section -->
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="summer-title">Summer in Gyumri</h2>
        </div>
        <p class="description-text">Enjoy a warm day in Gyumri, enjoy great music and food, or explore Gyumri's fascinating museums.</p>
        <a href="#" class="see-more-link-black">See More<span class="arrow"> &#8702;</span></a>
        <!-- Cards Section -->
        <div class="row card-container">
            <!-- Card 1 -->
            <div class="col-md-4">
                <div>
                    <img src="~/content/Images/see1.png" class="card-img-top" alt="Gallery of Mariam and Eranuhi Aslamazyan Sisters">

                </div>
            </div>

            <!-- Card 2 -->
            <div class="col-md-4">
                <div>
                    <img src="~/content/Images/see2.png" class="card-img-top" alt="Hovhannes Shiraz Museum">

                </div>
            </div>

            <!-- Card 3 -->
            <div class="col-md-4">
                <div>
                    <img src="~/content/Images/see3.png" class="card-img-top" alt="Dzitoghtsyan Museum">

                </div>
            </div>
        </div>
    </div>

    <!-- Activities Section -->
    <div class="mb-1 ms-6">
    </div>
    <!-- Tourist Attractions Section -->
    @foreach (var item in ViewBag.Subcategories)
    {
        <div class="section mb-1 ms-6">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="section-heading">@item.Name</h2>
            </div>
            <p class="section-subtitle">@item.Description</p>
            <a href="#" class="see-more-link-black">See More<span class="arrow"> &#8702;</span></a>
            <div class="row">
                @foreach (var place in item.Places)
                {
                    <div class="col-md-4">
                        <div class="card">
                            <img src="~/Images/places/@place.Photo" class="card-img-top" alt="Gyumri Drama Theatre">
                            <div class="card-body">
                                <h5 class="card-title">@place.Description</h5>
                            </div>
                        </div>
                    </div>
                }
               
                
            </div>
        </div>
    }
    

