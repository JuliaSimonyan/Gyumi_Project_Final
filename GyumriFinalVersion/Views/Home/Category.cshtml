@{
    string GetTranslatedName(Gyumri.Common.ViewModel.Subcategory.SubcategoryViewModel subcategory)
    {
        return currentCulture switch
        {
            "hy" => subcategory.NameArm,
            "ru" => subcategory.NameRu,
            _ => subcategory.Name, // default to English
        };
    }

    string GetTranslatedDescription(Gyumri.Common.ViewModel.Subcategory.SubcategoryViewModel subcategory)
    {
        return currentCulture switch
        {
            "hy" => subcategory.DescriptionArm,
            "ru" => subcategory.DescriptionRu,
            _ => subcategory.Description,
        };
    }
}


