<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Getting Here - Travel Planner</title>
    <link rel="stylesheet" href="~/Content/css/responsive.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css">

    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-routing-machine/dist/leaflet-routing-machine.css" />
    <link rel="stylesheet" href="~/Content/css/step1.css">
</head>
<body>
    <!-- Main Content -->
    <div class="main-content" style="background-color:white;">

        <!-- Progress Steps -->
        <div class="progress-steps">
            <div class="step active">
                <div class="step-icon">
                    <i class="fa-solid fa-car"></i>
                </div>
                <div class="step-text"> @AppRes.GettingToAround </div>
            </div>
            <div class="step-divider"></div>
            <div class="step">
                <div class="step-icon">
                    <i class="fa-solid fa-bed"></i>
                </div>
                <div class="step-text"> @AppRes.WheretoStay </div>
            </div>
            <div class="step-divider"></div>
            <div class="step">
                <div class="step-icon">
                    <i class="fa-solid fa-location-dot"></i>
                </div>
                <div class="step-text">@AppRes.WhatToDo</div>
            </div>
            <div class="step-divider"></div>
            <div class="step">
                <div class="step-icon">
                    <i class="fa-solid fa-check"></i>
                </div>
                <div class="step-text">@AppRes.Finalizing</div>
            </div>
        </div>
        <div class="route-info-container-black">
            <div class="route-info-white">
                <h5>
                    <i style="border: 1ps solid white; padding: 5px;" class="fa-solid fa-location-dot"></i>@AppRes.Yerevan </h3>
                    <p>@AppRes.RoutInfo</p>
            </div>
        </div>
        <form method="post">
            <!-- Two-column layout for map and transportation options -->
            <div class="trip-planner-container">
                <!-- Left column - Map -->
                <div class="map-column">
                    <div class="map-wrapper">
                        <div id="map"></div>
                    </div>
                </div>

                <!-- Right column - Transportation options -->
                <div class="options-column">
                    <div class="route-info-container">
                        <div class="route-info">
                            <h3>@(AppRes.Yerevan) - @(AppRes.Gyumri)</h3>
                            <p style="color:#181818;">353 @AppRes.km</p>
                        </div>
                    </div>
                    <!-- Taxi Dropdown -->
                    <div class="transport-option-group">
                        <div class="transport-header expanded">
                            <div class="transport-icon">
                                <i class="fa-solid fa-taxi"></i>
                            </div>
                            <div class="transport-name">@AppRes.Taxi</div>
                            <div class="dropdown-arrow">
                                <i class="fa-solid fa-chevron-up"></i>
                            </div>
                        </div>

                        <div class="transport-content">
                            <!-- GG Taxi -->
                            <div class="transport-item selected">
                                <div class="item-rating">
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                </div>
                                <div class="item-radio">
                                    <input type="radio" value="GG Taxi" name="transport" id="gg-taxi" checked>
                                    <label for="gg-taxi">GG Taxi</label>
                                </div>
                                <div class="item-details">
                                    <div class="detail">
                                        <i class="fa-regular fa-clock"></i>
                                        <span>90 min</span>
                                    </div>
                                    <div class="detail">
                                        <i class="fa-solid fa-money-bill"></i>
                                        <span>12,000 (֏) AMD </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Yandex Taxi -->
                            <div class="transport-item">
                                <div class="item-rating">
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-regular fa-star"></i>
                                </div>
                                <div class="item-radio">
                                    <input type="radio" value="Yandex Taxi" name="transport" id="yandex-taxi">
                                    <label for="yandex-taxi">Yandex Taxi</label>
                                </div>
                                <div class="item-details">
                                    <div class="detail">
                                        <i class="fa-regular fa-clock"></i>
                                        <span>100 min</span>
                                    </div>
                                    <div class="detail">
                                        <i class="fa-solid fa-money-bill"></i>
                                        <span>10,000 (֏) AMD  </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Bus Dropdown -->
                    <div class="transport-option-group">
                        <div class="transport-header">
                            <div class="transport-icon">
                                <i class="fa-solid fa-bus"></i>
                            </div>
                            <div class="transport-name">@AppRes.Bus</div>
                            <div class="dropdown-arrow">
                                <i class="fa-solid fa-chevron-down"></i>
                            </div>
                        </div>
                        <div class="transport-content" style="display: none;"></div>
                    </div>

                    <!-- Train Dropdown -->
                    <div class="transport-option-group">
                        <div class="transport-header">
                            <div class="transport-icon">
                                <i class="fa-solid fa-train"></i>
                            </div>
                            <div class="transport-name">@AppRes.Train</div>
                            <div class="dropdown-arrow">
                                <i class="fa-solid fa-chevron-down"></i>
                            </div>
                        </div>
                        <div class="transport-content" style="display: none;"></div>
                    </div>

                    <!-- Private Car Dropdown -->
                    <div class="transport-option-group">
                        <div class="transport-header">
                            <div class="transport-icon">
                                <i class="fa-solid fa-car"></i>
                            </div>
                            <div class="transport-name">@AppRes.PrivateCar</div>
                            <div class="dropdown-arrow">
                                <i class="fa-solid fa-chevron-down"></i>
                            </div>
                        </div>
                        <div class="transport-content" style="display: none;"></div>
                    </div>
                </div>
            </div>

            <!-- Navigation Buttons -->
            <div class="navigation-buttons">
                <a href=@Url.Action("Index", "Trip") class="back-btn">
                    <i class="fa-solid fa-arrow-left"></i>
                    @AppRes.Back
                </a>
                <button type="submit" class="next-btn">
                    @AppRes.Next
                    <i class="fa-solid fa-arrow-right"></i>
                </button>
            </div>
        </form>


    </div>


    <!-- Leaflet JS -->

    <script src="https://kit.fontawesome.com/e8c2e1c09c.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet-routing-machine/dist/leaflet-routing-machine.min.js"></script>


    <script>
        var map = L.map('map').setView([40.7942, 43.8453], 10);

        L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png', {
            attribution: '&copy; OpenStreetMap contributors & CartoDB',
            subdomains: 'abcd',
            maxZoom: 19
        }).addTo(map);


        var points = [];
        var markers = [];
        var routingControl = null;

        map.on('click', function (e) {
            if (points.length >= 2) {
                points = [];
                markers.forEach(function (marker) {
                    map.removeLayer(marker);
                });
                markers = [];
                if (routingControl) {
                    map.removeControl(routingControl);
                    routingControl = null;
                }
            }

            var marker = L.marker(e.latlng).addTo(map);
            markers.push(marker);
            points.push(e.latlng);

            if (points.length === 2) {
                drawRoute(points[0], points[1]);
            }
        });

        function drawRoute(start, end) {
            routingControl = L.Routing.control({
                waypoints: [
                    start,
                    end
                ],
                routeWhileDragging: false,
                show: false,
                draggableWaypoints: false,
                addWaypoints: false,
                lineOptions: {
                    styles: [{ color: 'blue', weight: 5 }]
                },
                createMarker: function () { return null; },
            }).addTo(map);
        }
    </script>
    <script src="https://kit.fontawesome.com/e8c2e1c09c.js" crossorigin="anonymous"></script>

</body>
</html>