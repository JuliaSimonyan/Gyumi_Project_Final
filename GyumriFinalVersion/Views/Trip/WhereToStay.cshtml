@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Gyumri.Data.Models;
@{
    var currentCulture = Context.Request.Cookies["UserCulture"] ?? "en";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Where to Stay - Travel Planner</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="~/Content/css/step2.css">
    <link rel="stylesheet" href="~/Content/css/step1.css">
</head>
<body>
    <!-- Main Content -->
    <div class="main-content" style="background-color:white;">
        <!-- Progress Steps -->
        <div class="progress-steps">
            <div class="step">
                <div class="step-icon">
                    <i class="fa-solid fa-car"></i>
                </div>
                <div class="step-text"> @AppRes.GettingToAround </div>
            </div>
            <div class="step-divider"></div>
            <div class="step actiive">
                <div class="step-icon">
                    <i class="fa-solid fa-bed"></i>
                </div>
                <div class="step-text"> @AppRes.WheretoStay </div>
            </div>
            <div class="step-divider"></div>
            <div class="step">
                <div class="step-icon">
                    <i class="fa-solid fa-location-dot"></i>
                </div>
                <div class="step-text">@AppRes.WhatToDo</div>
            </div>
            <div class="step-divider"></div>
            <div class="step">
                <div class="step-icon">
                    <i class="fa-solid fa-check"></i>
                </div>
                <div class="step-text">@AppRes.Finalizing</div>
            </div>
        </div>

        <!-- Accommodation Filters -->
        <div class="accommodation-filters">
            @foreach (var item in ViewBag.AllSubcategories)
            {
                <a href="@Url.Action("SecondStep", "Trip", new { subcategoryId = item.SubcategoryId, currentPage = 1 })">
                    <button class="filter-btn">
                        <i class="fa-solid fa-hotel"></i>  @*TODO:  ներկայիս ընտրվածի գույնը փոխել *@
                        @if (currentCulture == "ru-RU")
                        {
                            <span>@item.NameRu</span>
                        }
                        else if (currentCulture == "hy-AM")
                        {
                            <span>@item.NameArm</span>
                        }
                        else
                        {
                            <span>@item.Name</span>
                        }

                    </button>
                </a>
            }

            @* <button class="filter-btn active">
                <i class="fa-solid fa-hotel"></i>
                <span>Hotel</span>
            </button>
            <button class="filter-btn">
                <i class="fa-solid fa-house"></i>
                <span>Guest House</span>
            </button>
            <button class="filter-btn">
                <i class="fa-solid fa-bed"></i>
                <span>Hostel</span>
            </button> *@
        </div>

        <div class="accommodation-list">
            <form id="placeForm" asp-action="WheretoStay" asp-controller="Trip" method="post">
                @foreach (var place in ViewBag.Places)
                {
                    <div class="accommodation-item">
                        <div class="item-selection">
                            <input type="radio" name="placeId" value="@place.Id" id="villa-kars" checked>
                            <label for="villa-kars"></label>
                        </div>
                        <div class="item-image">
                            <img src="~/Images/accomodations/@place.Photo" alt="Villa Kars Hotel">
                        </div>
                        <div class="item-details">
                            @if (currentCulture == "ru-RU")
                            {
                                <h3>@place.PlaceNamePlaceNameRu</h3>
                            }
                            else if (currentCulture == "hy-AM")
                            {
                                <h3>@place.PlaceNameArm</h3>
                            }
                            else
                            {
                                <h3>@place.PlaceName</h3>
                            }
                            <div class="item-rating">
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-regular fa-star"></i>
                            </div>

                            @if (currentCulture == "ru-RU")
                            {
                                <p>@place.DescriptionRu</p>
                            }
                            else if (currentCulture == "hy-AM")
                            {
                                <p>@place.DescriptionArm</p>
                            }
                            else
                            {
                                <p>@place.Description</p>
                            }
                        </div>
                        <div class="item-price">
                            <div class="price-tag">
                                <i class="fa-solid fa-tag"></i>
                                <span>@place.MinPrice - @place.MaxPrice ֏ AMD / night</span>
                            </div>
                            <a href="#" class="more-details">@AppRes.SeeMore <i class="fa-solid fa-chevron-right"></i></a>
                        </div>
                    </div>
                }
            </form>
        </div>

        <div class="pagination-container">
            <div class="navigation-buttons">
                <a href=@Url.Action("FirstStep", "Trip") class="back-btn">
                    <i class="fa-solid fa-arrow-left"></i>
                    @AppRes.Back
                </a>
                <div class="pagination">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <a href="@Url.Action("SecondStep", "Trip", new { subcategoryId = ViewBag.CurrentSubcategory.SubcategoryId, currentPage = ViewBag.CurrentPage - 1 })" class="page-item"><i class="fa-solid fa-arrow-left"></i></a>
                    }
                    @if (ViewBag.CurrentPage > 3)
                    {
                        <a href="@Url.Action("SecondStep", "Trip", new { subcategoryId = ViewBag.CurrentSubcategory.SubcategoryId, currentPage = 1 })" class="page-item">1</a>
                        <span class="page-item">...</span>
                    }

                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.PagesCount, ViewBag.CurrentPage + 2); i++)
                    {
                        var activeClass = (i == ViewBag.CurrentPage) ? "active" : "";
                        <a href="@Url.Action("SecondStep", "Trip", new { subcategoryId = ViewBag.CurrentSubcategory.SubcategoryId, currentPage = i })"
                           class="page-item @activeClass">@i</a>
                    }

                    @if (ViewBag.CurrentPage < ViewBag.PagesCount - 2)
                    {
                        <span class="page-item">...</span>
                        <a href="@Url.Action("SecondStep", "Trip", new { subcategoryId = ViewBag.CurrentSubcategory.SubcategoryId, currentPage = ViewBag.PagesCount })" class="page-item">@ViewBag.PagesCount</a>
                    }

                    @if (ViewBag.CurrentPage < ViewBag.PagesCount)
                    {
                        <a href="@Url.Action("SecondStep", "Trip", new { subcategoryId = ViewBag.CurrentSubcategory.SubcategoryId, currentPage = ViewBag.CurrentPage + 1 })" class="page-item"><i class="fa-solid fa-arrow-right"></i></a>
                    }
                </div>

                <button type="submit" form="placeForm">
                    @AppRes.Next
                    <i class="fa-solid fa-arrow-right"></i>
                </button>
                @* <a href=@Url.Action("ThirdStep", "Trip") class="next-btn">
                    @AppRes.Next
                    <i class="fa-solid fa-arrow-right"></i>
                </a> *@
            </div>

        </div>


    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/e8c2e1c09c.js" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const filterButtons = document.querySelectorAll('.filter-btn');
            filterButtons.forEach(button => {
                button.addEventListener('click', function () {
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            const accommodationRadios = document.querySelectorAll('input[name="accommodation"]');
            accommodationRadios.forEach(radio => {
                radio.addEventListener('change', function () {
                    document.querySelectorAll('.accommodation-item').forEach(item => {
                        item.classList.remove('selected');
                    });

                    if (this.checked) {
                        this.closest('.accommodation-item').classList.add('selected');
                    }
                });
            });

            document.querySelector('.accommodation-item').classList.add('selected');


        });
    </script>
</body>
</html>