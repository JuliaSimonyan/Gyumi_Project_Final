<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Where to Stay - Travel Planner</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="~/Content/css/step4.css">


</head>
<body>
    <h1>Forth Step page</h1>
    <!-- Main Content -->
    <div class="main-content" style="background-color:white";>
        <!-- Progress Steps -->
        <div class="progress-steps">
            <div class="step completed">
                <div class="step-icon">
                    <i class="fa-solid fa-car"></i>
                </div>
                <div class="step-text">Getting to/around</div>
            </div>
            <div class="step-divider"></div>
            <div class="step completed">
                <div class="step-icon">
                    <i class="fa-solid fa-bed"></i>
                </div>
                <div class="step-text">Where to Stay</div>
            </div>
            <div class="step-divider"></div>
            <div class="step completed">
                <div class="step-icon">
                    <i class="fa-solid fa-location-dot"></i>
                </div>
                <div class="step-text">What to Do</div>
            </div>
            <div class="step-divider"></div>
            <div class="step active">
                <div class="step-icon">
                    <i class="fa-solid fa-check"></i>
                </div>
                <div class="step-text">Finalizing</div>
            </div>
        </div>
        <!-- Travel Guide Section -->
        <section class="travel-guide">
            <div class="guide-section">
                <h2>Getting to Gyumri</h2>
                <div class="guide-item">
                    <div class="item-content">
                        <div class="item-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                                <path d="M1 10h22"></path>
                            </svg>
                        </div>
                        <div class="item-details">
                            <h3>GG Taxi</h3>
                            <div class="item-time">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <polyline points="12 6 12 12 16 14"></polyline>
                                </svg>
                                90 min
                            </div>
                        </div>
                    </div>
                    <div class="item-price">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                            <path d="M12 8v8"></path>
                            <path d="M8 12h8"></path>
                        </svg>
                        12,000 (֏) AMD
                        <button class="change-btn">Change</button>
                    </div>
                </div>
            </div>

            <div class="guide-section">
                <h2>Where to Stay</h2>
                <div class="guide-item">
                    <div class="item-content">
                        <div class="item-thumbnail">
                            <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/image-kUJhL8uD96j8xGMUGnXmdJFprk4qId.png" alt="Berlin Art Hotel">
                        </div>
                        <div class="item-details">
                            <h3>Berlin Art Hotel</h3>
                            <div class="item-address">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                    <circle cx="12" cy="10" r="3"></circle>
                                </svg>
                                25 Haghtanaki Avenue, Gyumri
                            </div>
                        </div>
                    </div>
                    <div class="item-price">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                            <path d="M12 8v8"></path>
                            <path d="M8 12h8"></path>
                        </svg>
                        19,500 - 31,000 (֏) AMD / night
                        <div class="action-buttons">
                            <button class="change-btn">Change</button>
                            <button class="remove-btn">×</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="guide-section">
                <h2>What to Do</h2>
                <div class="guide-item">
                    <div class="item-content">
                        <div class="item-thumbnail">
                            <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/image-kUJhL8uD96j8xGMUGnXmdJFprk4qId.png" alt="Dzitoghtsyan Museum">
                        </div>
                        <div class="item-details">
                            <h3>Dzitoghtsyan Museum</h3>
                            <div class="item-address">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                    <circle cx="12" cy="10" r="3"></circle>
                                </svg>
                                47 Haghtanaki Avenue, Gyumri
                            </div>
                        </div>
                    </div>
                    <div class="item-price">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                            <path d="M12 8v8"></path>
                            <path d="M8 12h8"></path>
                        </svg>
                        3,000 - 5,000 (֏) AMD
                        <div class="action-buttons">
                            <button class="change-btn">Change</button>
                            <button class="remove-btn">×</button>
                        </div>
                    </div>
                </div>

                <div class="guide-item">
                    <div class="item-content">
                        <div class="item-thumbnail">
                            <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/image-kUJhL8uD96j8xGMUGnXmdJFprk4qId.png" alt="Aregak Bakery & Café">
                        </div>
                        <div class="item-details">
                            <h3>Aregak Bakery & Café</h3>
                            <div class="item-address">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                    <circle cx="12" cy="10" r="3"></circle>
                                </svg>
                                Abovyan st. 242, Gyumri
                            </div>
                        </div>
                    </div>
                    <div class="item-price">
                        <div class="action-buttons">
                            <button class="change-btn">Change</button>
                            <button class="remove-btn">×</button>
                        </div>
                    </div>
                </div>

                <div class="guide-item">
                    <div class="item-content">
                        <div class="item-thumbnail">
                            <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/image-kUJhL8uD96j8xGMUGnXmdJFprk4qId.png" alt="Gwoog Gastrohouse">
                        </div>
                        <div class="item-details">
                            <h3>Gwoog Gastrohouse</h3>
                            <div class="item-address">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                    <circle cx="12" cy="10" r="3"></circle>
                                </svg>
                                11/3 Tigran Mets Avenue, Gyumri
                            </div>
                        </div>
                    </div>
                    <div class="item-price">
                        <div class="action-buttons">
                            <button class="change-btn">Change</button>
                            <button class="remove-btn">×</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Pagination -->
        <div class="pagination-container">
            <div class="navigation-buttons">
                <a href=@Url.Action("ThirdStep", "Trip") class="back-btn">
                    <i class="fa-solid fa-arrow-left"></i>
                    Back
                </a>
                <div class="pagination">
                    <a href="#" class="page-item active">1</a>
                    <a href="#" class="page-item">2</a>
                    <a href="#" class="page-item">...</a>
                    <a href="#" class="page-item">9</a>
                    <a href="#" class="page-item">10</a>
                </div>
                <a href=@Url.Action("Final", "Trip") class="next-btn">
                    Complete
                    <i class="fa-solid fa-arrow-right"></i>
                </a>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/e8c2e1c09c.js" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const filterButtons = document.querySelectorAll('.filter-btn');
            filterButtons.forEach(button => {
                button.addEventListener('click', function () {
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            const accommodationRadios = document.querySelectorAll('input[name="accommodation"]');
            accommodationRadios.forEach(radio => {
                radio.addEventListener('change', function () {
                    document.querySelectorAll('.accommodation-item').forEach(item => {
                        item.classList.remove('selected');
                    });

                    if (this.checked) {
                        this.closest('.accommodation-item').classList.add('selected');
                    }
                });
            });

            document.querySelector('.accommodation-item').classList.add('selected');

            const paginationItems = document.querySelectorAll('.page-item');
            paginationItems.forEach(item => {
                item.addEventListener('click', function (e) {
                    e.preventDefault();
                    paginationItems.forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                });
            });
        });
    </script>
</body>
</html>