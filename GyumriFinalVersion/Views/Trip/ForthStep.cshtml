@model GyumriFinalVersion.Models.TripInputInfo

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Where to Stay - Travel Planner</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="~/Content/css/step4.css">

</head>
<body>
    <!-- Main Content -->
    <div class="main-content" style="background-color:white" ;>
        <!-- Progress Steps -->
        <div class="progress-steps">
            <div class="step actiive">
                <div class="step-icon">
                    <i class="fa-solid fa-car"></i>
                </div>
                <div class="step-text"> @AppRes.GettingToAround </div>
            </div>
            <div class="step-divider"></div>
            <div class="step actiive">
                <div class="step-icon">
                    <i class="fa-solid fa-bed"></i>
                </div>
                <div class="step-text"> @AppRes.WheretoStay </div>
            </div>
            <div class="step-divider"></div>
            <div class="step actiive">
                <div class="step-icon">
                    <i class="fa-solid fa-location-dot"></i>
                </div>
                <div class="step-text">@AppRes.WhatToDo</div>
            </div>
            <div class="step-divider"></div>
            <div class="step actiive">
                <div class="step-icon">
                    <i class="fa-solid fa-check"></i>
                </div>
                <div class="step-text">@AppRes.Finalizing</div>
            </div>
        </div>

        <!-- Travel Guide Section -->
        <section class="travel-guide">
            <div class="guide-section">
                <h2>@AppRes.GettingtoGyumri</h2>
                <div class="guide-item">
                    <div class="item-content">
                        <div class="item-icon">
                            <i class="fa-solid fa-car"></i>
                        </div>
                        <div class="item-details">
                            <h3 style="color:#000;">@ViewBag.FullInfo.TransportName</h3>
                            <div class="item-time">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <polyline points="12 6 12 12 16 14"></polyline>
                                </svg>
                                @if (ViewBag.FullInfo.TimePeriod == null)
                                {
                                    <span>90 @AppRes.min</span>
                                }
                                else
                                {
                                    @($"{ViewBag.FullInfo.TimePeriod} {AppRes.min}")
                                }

                            </div>
                        </div>
                    </div>
                    <div class="item-price">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                            <path d="M12 8v8"></path>
                            <path d="M8 12h8"></path>
                        </svg>
                        @if (ViewBag.FullInfo.TransportAmount == null)
                        {
                            <span>12,000 AMD</span>
                        }
                        else
                        {
                            @ViewBag.FullInfo.TransportAmount
                        }
                        @* <button class="change-btn">Change</button> *@
                    </div>
                </div>
            </div>

            <div class="guide-section">
                <h2>@AppRes.WheretoStay</h2>
                <div class="guide-item">
                    <div class="item-content">
                        <div class="item-thumbnail">
                            <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/image-kUJhL8uD96j8xGMUGnXmdJFprk4qId.png" alt="Berlin Art Hotel">
                        </div>
                        <div class="item-details">
                            @if (ViewBag.CurrentCulture == "ru-RU")
                            {
                                <h3>@ViewBag.FullInfo.PlaceWhereToStay?.PlaceNameRu</h3>
                            }
                            else if (ViewBag.CurrentCulture == "hy-AM")
                            {
                                <h3>@ViewBag.FullInfo.PlaceWhereToStay?.PlaceNameArm</h3>
                            }
                            else
                            {
                                <h3>@ViewBag.FullInfo.PlaceWhereToStay?.PlaceName</h3>
                            }
                            <div class="item-address" style="color:#000;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                    <circle cx="12" cy="10" r="3"></circle>
                                </svg>
                                @ViewBag.FullInfo.PlaceWhereToStay?.PlaceName @* TODO:: get address from backend *@
                            </div>
                        </div>
                    </div>
                    <div class="item-price" style="color:#000;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                            <path d="M12 8v8"></path>
                            <path d="M8 12h8"></path>
                        </svg>
                        @(ViewBag.FullInfo.PlaceWhereToStay?.MinPrice) - @(ViewBag.FullInfo.PlaceWhereToStay?.MaxPrice) AMD / @AppRes.night
                        @* <div class="action-buttons">
                            <button class="change-btn">Change</button>
                            <button class="remove-btn">×</button>
                        </div> *@
                    </div>
                </div>
            </div>

            <h2>Your Trip Summary</h2>

            <h3>Where to Stay</h3>
            @if (ViewBag.FullInfo?.PlaceWhatToDo != null && ((List<Gyumri.Common.ViewModel.Place.PlacesViewModel>)ViewBag.FullInfo.PlaceWhatToDo).Any())
            {
                <ul>
                    @foreach (var place in (List<Gyumri.Common.ViewModel.Place.PlacesViewModel>)ViewBag.FullInfo.PlaceWhatToDo)
                    {
                        <li>@place.PlaceName</li>
                    }
                </ul>
            }
            else
            {
                <p>No places selected to do.</p>
            }

            <div class="guide-section">
                <h2>@AppRes.WhatToDo</h2>
                @if (ViewBag.FullInfo.PlaceWhatToDo != null)
                {
                    @foreach (var item in ViewBag.FullInfo.PlaceWhatToDo)
                    {
                        <div class="guide-item">
                            <div class="item-content">
                                <div class="item-thumbnail">
                                    <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/image-kUJhL8uD96j8xGMUGnXmdJFprk4qId.png" alt="Dzitoghtsyan Museum">
                                </div>
                                <div class="item-details">
                                    @if (ViewBag.CurrentCulture == "ru-RU")
                                    {
                                        <h3>@item.PlaceNameRu</h3>

                                    }
                                    else if (ViewBag.CurrentCulture == "hy-AM")
                                    {
                                        <h3>@item.PlaceNameArm</h3>
                                    }
                                    else
                                    {
                                        <h3>@item.PlaceName</h3>
                                    }
                                    <div class="item-address" style="color:#000;">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                            <circle cx="12" cy="10" r="3"></circle>
                                        </svg>
                                        @*47 Haghtanaki Avenue, Gyumri TODO:: get address from backend *@
                                        @item.Address

                                        @if (ViewBag.CurrentCulture == "ru-RU")
                                        {
                                            @item.AddressRu

                                        }
                                        else if (ViewBag.CurrentCulture == "hy-AM")
                                        {
                                            @item.AddressArm
                                        }
                                        else
                                        {
                                            @item.Address
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="item-price">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                                    <path d="M12 8v8"></path>
                                    <path d="M8 12h8"></path>
                                </svg>
                                @(item.MinPrice) - @(item?.MaxPrice) AMD
                                <div class="action-buttons">
                                    @* <button class="change-btn">Change</button>
                            <button class="remove-btn">×</button> *@
                                </div>
                            </div>
                        </div>

                    }

                }
                @* <div class="guide-item">
                    <div class="item-content">
                        <div class="item-thumbnail">
                            <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/image-kUJhL8uD96j8xGMUGnXmdJFprk4qId.png" alt="Aregak Bakery & Café">
                        </div>
                        <div class="item-details">
                            <h3>Aregak Bakery & Café</h3>
                            <div class="item-address">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                    <circle cx="12" cy="10" r="3"></circle>
                                </svg>
                                Abovyan st. 242, Gyumri
                            </div>
                        </div>
                    </div>
                    <div class="item-price">
                        <div class="action-buttons">
                            <button class="change-btn">Change</button>
                            <button class="remove-btn">×</button>
                        </div>
                    </div>
                </div> 

                <div class="guide-item">
                    <div class="item-content">
                        <div class="item-thumbnail">
                            <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/image-kUJhL8uD96j8xGMUGnXmdJFprk4qId.png" alt="Gwoog Gastrohouse">
                        </div>
                        <div class="item-details">
                            <h3>Gwoog Gastrohouse</h3>
                            <div class="item-address">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                    <circle cx="12" cy="10" r="3"></circle>
                                </svg>
                                11/3 Tigran Mets Avenue, Gyumri
                            </div>
                        </div>
                    </div>
                    <div class="item-price">
                        <div class="action-buttons">
                            <button class="change-btn">Change</button>
                            <button class="remove-btn">×</button>
                        </div>
                    </div>
                </div>*@
            </div>
        </section>

        <!-- Pagination -->
        <div class="pagination-container">
            <div class="navigation-buttons">
                <a href=@Url.Action("WhereToStay", "Trip") class="back-btn">
                    <i class="fa-solid fa-arrow-left"></i>
                    @AppRes.Back
                </a>
                @*  <div class="pagination">
                    <a href="#" class="page-item active">1</a>
                    <a href="#" class="page-item">2</a>
                    <a href="#" class="page-item">...</a>
                    <a href="#" class="page-item">9</a>
                    <a href="#" class="page-item">10</a>
                </div> *@
                <a href=@Url.Action("Animation", "Trip") class="next-btn">
                    @AppRes.Complete
                    <i class="fa-solid fa-arrow-right"></i>
                </a>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/e8c2e1c09c.js" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const filterButtons = document.querySelectorAll('.filter-btn');
            filterButtons.forEach(button => {
                button.addEventListener('click', function () {
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            const accommodationRadios = document.querySelectorAll('input[name="accommodation"]');
            accommodationRadios.forEach(radio => {
                radio.addEventListener('change', function () {
                    document.querySelectorAll('.accommodation-item').forEach(item => {
                        item.classList.remove('selected');
                    });

                    if (this.checked) {
                        this.closest('.accommodation-item').classList.add('selected');
                    }
                });
            });

            document.querySelector('.accommodation-item').classList.add('selected');

            const paginationItems = document.querySelectorAll('.page-item');
            paginationItems.forEach(item => {
                item.addEventListener('click', function (e) {
                    e.preventDefault();
                    paginationItems.forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                });
            });
        });
    </script>
</body>
</html>