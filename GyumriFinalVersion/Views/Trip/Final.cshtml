<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Where to Stay - Travel Planner</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css">

    <link rel="stylesheet" href="~/Content/css/final.css">

</head>
<body>

    <div class="main-content" style="background-color:white" ;>

        <div class="mcontainer" style="background-color:white" ;>
            <div class="plan-container" id="plan-content">
                <div class="plan-header">
                    <div class="logo">
                        <a class="navbar-brand"><img style="filter:brightness(0)" src="~/content/Images/Vector.png" alt="Logo" height="30"></a>

                    </div>
                    <div class="address">
                        <p>@AppRes.AddressGyumri</p>
                        <p>@AppRes.AddressGyumri2</p>
                    </div>
                </div>

                <div class="plan-title">
                    <h1>@AppRes.TripToGyumri</h1>
                    <p>@AppRes.Plan</p>
                </div>

                <div class="plan-details">
                    <div class="detail-item">
                        <i class="far fa-calendar"></i>
                        <span>@ViewBag.FullInfo.Date</span>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-user"></i>
                        <span>@ViewBag.FullInfo.AdultCount</span>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-child"></i>
                        <span>@ViewBag.FullInfo.ChildrenCount</span>
                    </div>
                </div>

                <div class="plan-section">
                    <h2>@AppRes.GettingtoGyumri</h2>
                    <div class="section-item">
                        <div class="item-icon">
                            <i class="fas fa-taxi"></i>
                        </div>
                        <div class="item-name">@ViewBag.FullInfo.TransportName</div>
                        <div class="item-info">
                            <span>@($"{ViewBag.FullInfo.TimePeriod} {AppRes.min}")</span>
                            <i class="far fa-clock"></i>
                        </div>
                    </div>
                </div>

                <div class="plan-section">
                    <h2>@AppRes.WheretoStay</h2>
                    <div class="section-item">
                        <div class="item-icon">
                            <i class="fas fa-hotel"></i>
                        </div>
                        <div class="item-name">
                            @if (ViewBag.CurrentCulture == "ru-RU")
                            {
                                @ViewBag.FullInfo.PlaceWhereToStay?.PlaceNameRu
                            }
                            else if (ViewBag.CurrentCulture == "hy-AM")
                            {
                                @ViewBag.FullInfo.PlaceWhereToStay?.PlaceNameArm
                            }
                            else
                            {
                                @ViewBag.FullInfo.PlaceWhereToStay?.PlaceName
                            }
                        </div>
                        <div class="item-info">
                            @if (ViewBag.CurrentCulture == "ru-RU")
                            {
                                <span>@ViewBag.FullInfo.PlaceWhereToStay?.AddressRu</span>
                            }
                            else if (ViewBag.CurrentCulture == "hy-AM")
                            {
                                <span>@ViewBag.FullInfo.PlaceWhereToStay?.AddressArm</span>
                            }
                            else
                            {
                                <span>@ViewBag.FullInfo.PlaceWhereToStay?.Address</span>
                            }
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                    </div>
                </div>

                <div class="plan-section">
                    <h2>@AppRes.WhatToDo</h2>


                    @foreach (var item in ViewBag.FullInfo.PlaceWhatToDo)
                    {
                        <div class="section-item">
                            <div class="item-icon">
                                <i class="fas fa-coffee"></i>
                            </div>
                            <div class="item-name">
                                @if (ViewBag.CurrentCulture == "ru-RU")
                                {
                                    <h3 style="color:#000;">@item.PlaceNameRu</h3>

                                }
                                else if (ViewBag.CurrentCulture == "hy-AM")
                                {
                                    <h3 style="color:#000;">@item.PlaceNameArm</h3>
                                }
                                else
                                {
                                    <h3 style="color:#000;">@item.PlaceName</h3>
                                }
                            </div>
                            <div class="item-info">
                                <span>
                                    @if (ViewBag.CurrentCulture == "ru-RU")
                                    {
                                        @item.AddressRu

                                    }
                                    else if (ViewBag.CurrentCulture == "hy-AM")
                                    {
                                        @item.AddressArm
                                    }
                                    else
                                    {
                                        @item.Address
                                    }
                                </span>
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                        </div>
                    }

                </div>
            </div>

            <div>
                <div class="action-buttons" method="post">
                    <input type="email" name="email" class="form-control w-100" required />

                    <button class="btn btn-back" id="backBtn">
                        <i class="fas fa-arrow-left"></i>
                        Back
                    </button>
                    <button class="btn btn-download" id="downloadBtn">
                        <i class="fas fa-file-pdf"></i>
                        Download PDF
            <div>
                <form asp-controller="Trip" asp-action="SendWelcomeEmail" class="action-buttons" method="post">
                    <input type="email" name="email" class="form-control" />
                    <button class="btn btn-email" id="emailBtn" type="submit">
                        <i class="fas fa-envelope"></i>
                        @AppRes.SendEmail
                    </button>
                    <form asp-action="SendWelcomeEmail" asp-controller="Trip">
@*                         <button class="btn btn-email" id="emailBtn">
                            <i class="fas fa-envelope"></i>
                            Send via Email
                        </button> *@
                        <button class="btn btn-email" id="emailBtn" type="submit">
                            <i class="fas fa-envelope"></i>
                            Ուղարկել նամակ
                        </button>
                    </form>


                    @* 
                    <button class="btn btn-share" id="shareBtn">
                        <i class="fas fa-share-alt"></i>
                        Share
                    </button> *@
                </form>
                <button class="btn btn-back" id="backBtn">
                    <i class="fas fa-arrow-left"></i>
                    @AppRes.Back
                </button>
                <button class="btn btn-download" id="downloadBtn">
                    <i class="fas fa-file-pdf"></i>
                    Download PDF
                </button>

                </div>
            </div>

            <!-- Share Modal -->
            @* <div class="modal mb-4" id="shareModal">
                <div class="modal-content">
                    <span class="close-modal">&times;</span>
                    <h3>Share Your Trip Plan</h3>
                    <div class="social-icons">
                        <a href="#" class="social-icon facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-icon twitter"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-icon whatsapp"><i class="fab fa-whatsapp"></i></a>
                        <a href="#" class="social-icon telegram"><i class="fab fa-telegram-plane"></i></a>
                    </div>
                    <div class="share-link">
                        <input type="text" id="shareLink" value="https://gyumritourism.com/trip/12345" readonly>
                        <button id="copyLink">Copy</button>
                    </div>

                </div>
            </div> *@
        </div>

</body>
<script src="~/Content/plan.js"></script>
</html>
