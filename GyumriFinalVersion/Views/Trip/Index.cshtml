@{
    ViewData["Title"] = @AppRes.LetsPlanYourTrip;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentCulture = Context.Request.Cookies["UserCulture"] ?? "en";
}
<link rel="stylesheet" href="~/Content/css/TripIndex.css">



<section class="tripMainSection">
    <div class="text-div">
        <h1 class="text-center fw-bold">@AppRes.LetsPlanYourTrip</h1>
        <p class="text-center">@AppRes.TripPageText</p>
    </div>
    <form asp-controller="Trip" asp-action="Index" method="post">
        <div class="trip-input-info-div d-flex gap-3">
            <div>
                <div class="d-flex gap-2 align-items-center justify-content-around input-div">
                    <i class="fa-regular fa-calendar ml-2 mr-2"></i>
                    <label class="m-0 d-flex flex-column">
                        <span class="text-center mb-n1" style="font-size:10px">Travel duration</span>
                        <input id="trip-dates" name="dates" style="font-size:13px" type="text" class="fw-bold text-center date-input w-100" value="Mar 15 - Mar 21" readonly>
                    </label>
                </div>
            </div>
            <div>
                <div class="d-flex counter gap-1 align-items-center justify-content-around adults-div">
                    <label class="fw-bold" style="font-size:13px">@AppRes.Adults</label>
                    <div class="d-flex gap-1">
                        <button type="button" class="counter-button counter-btn decrease">-</button>
                        <input name="adult" type="text" class="count-input text-center count-input custom-counter-input" value="2" readonly>
                        <button type="button" class="counter-button counter-btn increase">+</button>
                    </div>
                </div>
            </div>
            <div>
                <div class="d-flex counter gap-1 align-items-center justify-content-around adults-div">
                    <label class="fw-bold" style="font-size:13px">@AppRes.Children</label>
                    <span class="d-flex gap-1">
                        <button type="button" class="counter-button counter-btn decrease">-</button>
                        <input name="children" type="text" class="count-input text-center count-input custom-counter-input" value="2" readonly>
                        <button type="button" class="counter-button counter-btn increase">+</button>
                    </span>
                </div>
            </div>
            <button type="submit" class="d-flex next-button gap-2 align-items-center justify-content-around" style="font-size:13px">
                @AppRes.GettingHere
                <i class="fa-solid fa-arrow-right"></i>
            </button>

        </div>
    </form>

</section>



<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


