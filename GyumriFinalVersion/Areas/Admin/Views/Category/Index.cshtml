@model List<Gyumri.Common.ViewModel.Category.CategoryViewModel>

@{
    ViewData["Title"] = "Categories List";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Category", new { id = category.CategoryId })" class="btn btn-primary">Edit</a>
                    
                    <form action="@Url.Action("Delete", "Category", new { id = category.CategoryId })" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Add", "Category")" class="btn btn-success">Add Category</a>
