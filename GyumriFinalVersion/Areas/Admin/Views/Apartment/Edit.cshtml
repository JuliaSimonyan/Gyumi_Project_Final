@model Gyumri.Common.ViewModel.Apartment.ApartmentViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Gyumri.Data.Models;

<h2>Edit Apartment</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="Type">Type</label>
        <select class="form-control" id="Type" name="Type">
            @foreach (var type in Enum.GetValues(typeof(ApartmentType)).Cast<ApartmentType>())
            {
                <option value="@type" >@type</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="MinPrice">Min Price</label>
        <input type="number" class="form-control" id="MinPrice" name="MinPrice" value="@Model.MinPrice" required />
    </div>

    <div class="form-group">
        <label for="MaxPrice">Max Price</label>
        <input type="number" class="form-control" id="MaxPrice" name="MaxPrice" value="@Model.MaxPrice" required />
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
    </div>

    <div class="form-group">
        <label for="Photo">Upload Image (Optional)</label>
        <input type="file" class="form-control-file" id="Photo" name="photo" />
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <div>
                <img src="~/Images/accomodations/@Model.Image" alt="Current Photo" width="100" height="100" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
