@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Gyumri.Common.ViewModel.Activity.ActivityViewModel>


<h2>Activities</h2>

<p>
    <a href="@Url.Action("Add")">Add New Activity</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>OpeningHours</th>
            <th>Price Range</th>
            <th>ActivityType</th>
            <th>Rating</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model)
        {
            <tr>
                <td>@activity.Name</td>
                <td>@activity.Description</td>
                <td>@activity.OpeningHours</td>
                <td>@activity.PriceMin - @activity.PriceMax</td>
                <td>@activity.ActivityType</td>
                <td>@activity.Rating</td>
                <td><img src="~/Images/activities/@activity.Image" alt="Image" style="width: 50px; height: 50px;" /></td>
                <td>
                    <form action="@Url.Action("Delete", "Activity", new { id = activity.Id, area = "Admin" })" method="post" style="display:inline-block;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this place?')">Delete</button>
                    </form>
                    <a href="@Url.Action("Edit", "Activity", new { id = activity.Id, area = "Admin" })" class="btn btn-warning">Edit</a>

                </td>
            </tr>
        }
    </tbody>
</table>
